// Grey green palette
$greyGreenBg = #e6f4ea
$greyGreenBorder = #b7d3c6
$greyGreenText = #3a5a40
$greyGreenAccent = #95bfa3

profilePageContainer
  background $greyGreenBg

profileSection
  border 1px solid $greyGreenBorder
  background $greyGreenBg
  border-radius 0.5rem
  box-shadow 0 1px 2px rgba(0,0,0,0.03)
  padding 1.5rem

profileTitle
  color $greyGreenText
  font-weight 600

profileLabel
  color $greyGreenAccent
  font-size 0.95rem

profileValue
  color $greyGreenText
  font-size 1.05rem
  font-weight 500 