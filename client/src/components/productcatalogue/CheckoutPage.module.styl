promoSection
  margin-bottom 1rem

.promoInput
  font-family 'Inter', sans-serif
  background #faf9fb
  border 1.5px solid #e5e7eb
  transition border-color 0.2s, box-shadow 0.2s
  &:focus
    border-color #5B4DB1
    box-shadow 0 0 0 2px rgba(91,77,177,0.15)

.promoButton
  font-family 'Inter', sans-serif
  font-weight 600
  background #5B4DB1
  color #fff
  transition background 0.2s, box-shadow 0.2s
  box-shadow 0 1px 2px rgba(91,77,177,0.08)
  &:hover
    background #473a99
    box-shadow 0 2px 8px rgba(91,77,177,0.12)
  &:disabled
    background #bdb7e2
    color #f3f3f3
    cursor not-allowed 